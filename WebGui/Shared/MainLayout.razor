@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
       <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
       <MudSpacer />
       <AuthorizeView>
           <Authorized>
               <MudText Class="mr-3">Hello, @context.User.Identity?.Name!</MudText>
           </Authorized>
       </AuthorizeView>
       <MudMenu>
            <ActivatorContent>
                <AuthorizeView>
                   <Authorized>
                       <MudAvatar Color="Color.Secondary">@Char.ToUpper(context.User.Identity?.Name.ToCharArray().First() ?? 'A')</MudAvatar>
                   </Authorized>
                   <NotAuthorized>
                        <MudAvatar Color="Color.Secondary"></MudAvatar>
                   </NotAuthorized>
                </AuthorizeView>
            </ActivatorContent>
           <ChildContent>
                <AuthorizeView>
                   <Authorized>
                       <MudMenuItem Href="/Identity/Account/Manage">Manage</MudMenuItem>
                       <MudMenuItem Href="/Identity/Account/LogOut">Log out</MudMenuItem>
                   </Authorized>
                   <NotAuthorized>
                       <MudMenuItem Href="/Identity/Account/Register">Register</MudMenuItem>
                       <MudMenuItem Href="/Identity/Account/Login">Log in</MudMenuItem>
                   </NotAuthorized>
                </AuthorizeView>
           </ChildContent>
       </MudMenu>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">WebGui</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}