@using Domain.Repositories.Interfaces
@using Model.Entities

<MudPaper Class="px-8 py-8">
    @if (BlogPost != null)
    {
        <MudText Typo="Typo.h3" Class="mb-4">@BlogPost.Title</MudText>
        <MudMarkdown Value="@BlogPost.Body" />
    }
    else
    {
        <MudText>...</MudText>
    }
</MudPaper>

@code
{
    [Parameter]
    public BlogPost BlogPost { get; set; }
}
