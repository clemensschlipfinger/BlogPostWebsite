@using Domain.Repositories.Interfaces
@using Model.Entities

@if (BlogPost != null)
{
    <MudStack>
        <MudText Typo="Typo.h3">@BlogPost.Title</MudText>
        <MudDivider/>
        <MudText Typo="Typo.caption">@BlogPost.LastEditedAt</MudText>
        <MudMarkdown Value="@BlogPost.Body" />
    </MudStack>
}
else
{
    <MudText>...</MudText>
}

@code
{
    [Parameter]
    public BlogPost BlogPost { get; set; }
}
